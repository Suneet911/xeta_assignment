<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="11.50dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTwo"
        android:layout_width="188dp"
        android:layout_height="128dp"
        android:backgroundTint="#7E8FC9"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="103dp"
            android:layout_height="120dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/girl_image" />
    </androidx.cardview.widget.CardView>


    <TextView
        style="@style/textColor2"
        android:id="@+id/planName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/montserrat_700"
        android:gravity="start"
        android:text="@string/toned_arm"
        android:textAppearance="@style/toned_arm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/textColor2"
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_700"
        android:text="@string/recommend_text2"
        android:textAppearance="@style/recommend_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planName" />


</androidx.constraintlayout.widget.ConstraintLayout>